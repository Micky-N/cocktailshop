{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8 p-4 bg-white border border-gray-300">

        <div class="text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500 mx-auto mb-4" viewBox="0 0 20 20"
                 fill="currentColor">
                <path d="M10 2a8 8 0 1 1 0 16 8 8 0 0 1 0-16zm0 14a6 6 0 1 0 0-12 6 6 0 0 0 0 12zm-1-4a1 1 0 0 1-2 0V9a1 1 0 0 1 2 0v3zm4 0a1 1 0 0 1-2 0V9a1 1 0 0 1 2 0v3z"/>
            </svg>

            <h1 class="text-2xl font-semibold mb-2">Paiement réussi</h1>
            <p class="text-gray-600">Merci pour votre paiement.</p>
        </div>

        <div class="mt-8">
            <h2 class="text-lg font-semibold mb-2">Récapitulatif de la transaction :</h2>
            <ul class="list-disc pl-6">
                <li>Montant payé : {{ order.amount / 100 }} €</li>
                <li>ID de la transaction : {{ order.createdAt | date('U') }}</li>
                <li><a class="text-blue-600 hover:text-blue-800 hover:underline" href="{{ path('app_order') }}">Voir mes commandes</a></li>
            </ul>
        </div>

    </div>
{% endblock %}