{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
    <div class="px-8">
        <h1 class="text-2xl font-semibold mb-6">Liste des commandes</h1>

        <table class="min-w-full bg-white border border-gray-300">
            <thead>
            <tr>
                <th class="py-2 px-4 border-b">ID</th>
                <th class="py-2 px-4 border-b">Total</th>
                <th class="py-2 px-4 border-b"></th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td class="py-2 px-4 border-b text-center">{{ order.id }}</td>
                    <td class="py-2 px-4 border-b text-center">{{ order.amount / 100 }} â‚¬</td>
                    <td class="py-2 px-4 border-b text-center">
                        <a href="{{ path('order_invoice', {order: order.id}) }}">Facture</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
