<header class="bg-white z-10">
    <div class="container mx-auto px-6 py-3">
        <div class="flex items-center justify-between">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="hidden text-gray-600 md:flex md:items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"></path>
                    </svg>
                    <span class="mx-1 text-sm">Logout</span>
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="hidden text-gray-600 md:flex md:items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9"></path>
                    </svg>
                    <span class="mx-1 text-sm">Login</span>
                </a>
            {% endif %}
            <div class="text-gray-700 text-center text-3xl font-semibold absolute left-[50%] -translate-x-1/2">
                CocktailShop
            </div>
            {% if app.user %}
                <div class="flex items-center justify-end">
                    <button id="cartBtn" class="flex flex-col text-gray-600 focus:outline-none mx-4 sm:mx-0 relative">
                        <span class="absolute right-3 top-3 bg-blue-700 rounded-full flex items-center justify-center text-white text-sm w-6 h-6">{{ cart_service.count }}</span>
                        <svg class="h-5 w-5" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                             viewBox="0 0 24 24" stroke="currentColor">
                            <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </button>
                </div>
            {% endif %}
        </div>
        <nav class="sm:flex sm:justify-center sm:items-center mt-8">
            <div class="flex flex-col sm:flex-row">
                <a class="mt-3 text-gray-600 hover:underline sm:mx-3 sm:mt-0" href="{{ path('app_home') }}">Home</a>
                <a class="mt-3 text-gray-600 hover:underline sm:mx-3 sm:mt-0" href="{{ path('cocktail_index') }}">Cocktails</a>
                <a class="mt-3 text-gray-600 hover:underline sm:mx-3 sm:mt-0" href="{{ path('app_contact') }}">Contact</a>
                {% if app.user %}
                    <a class="mt-3 text-gray-600 hover:underline sm:mx-3 sm:mt-0" href="{{ path('app_profile') }}">Mon compte</a>
                {% endif %}
                {% if app.user and is_granted('EDIT') %}
                    <a class="mt-3 text-gray-600 hover:underline sm:mx-3 sm:mt-0" href="{{ path('admin_cocktail_index') }}">Administrator</a>
                {% endif %}
            </div>
        </nav>
    </div>
</header>